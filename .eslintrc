{
  "parser": "babel-eslint",

  "env": {
    "browser": true,
    "node": true
  },

  "plugins": [
    "prettier"
  ],
  "rules": {
    "strict": 2,

    "default-case": 2,
    "no-self-compare": 2,
    "no-else-return": 0,
    "no-throw-literal": 2,
    "no-void": 2,

    "max-params": [1, 5],
    "max-depth": [1, 3],
    "max-len": [1, 150, 2],
    "indent": [1, 2],

    "comma-style": [2, "last"],
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "consistent-this": [2, "DO NOT USE"],


    "no-var": 2,
    "no-new-require": 2,
    "no-lonely-if": 2,
    "no-nested-ternary": 2,
    "no-multiple-empty-lines": [2, {
      "max": 2
    }],
    "no-unused-expressions": 0,
    "no-use-before-define": 0,
    "quotes": [2, "double"],
    "no-multi-spaces": [2, {
      "exceptions": {
        "Property": true,
        "ImportDeclaration": true,
        "VariableDeclarator": true,
        "AssignmentExpression": true
      }
    }],
    "key-spacing": [2, {
      "beforeColon": false,
      "afterColon": true
    }],
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "all",
      }
    ]
  }
}
